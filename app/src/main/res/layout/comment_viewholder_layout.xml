<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:background="@android:color/white"
                                             android:id="@+id/comment__container"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <TextView android:id="@+id/comment__tv__name"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="6dp"
              android:text="@string/comments"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              android:textSize="20sp"

    />

    <TextView android:id="@+id/comment__tv__content"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="14sp"
              android:padding="6dp"
              app:layout_constraintStart_toStartOf="@id/comment__tv__name"
              app:layout_constraintTop_toBottomOf="@id/comment__tv__name"
              tools:text="All hail Joss Whedon, the warrior king of this dizzying"/>

</android.support.constraint.ConstraintLayout>